{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@internal/angular/test-util": ["packages/internal/angular/test-util/src/index.ts"],
      "@internal/core/test-util": ["packages/internal/core/test-util/src/index.ts"],
      "@lumberjackjs/angular": ["packages/lumberjackjs/angular/src/index.ts"],
      "@lumberjackjs/angular-http-driver": ["packages/lumberjackjs/angular-http-driver/src/index.ts"],
      "@lumberjackjs/core": ["packages/lumberjackjs/core/src/index.ts"],
      "@lumberjackjs/core/console-driver": ["packages/lumberjackjs/core/console-driver/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
