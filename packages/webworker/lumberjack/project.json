{
  "name": "webworker-lumberjack",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/webworker/lumberjack/src",
  "projectType": "library",
  "prefix": "webworker",
  "targets": {
    "build-package": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/webworker/lumberjack",
        "main": "packages/webworker/lumberjack/src/index.ts",
        "tsConfig": "packages/webworker/lumberjack/tsconfig.lib.json",
        "assets": ["packages/webworker/lumberjack/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs webworker-lumberjack {args.ver} {args.tag}"
      },
      "dependsOn": ["build-package"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/webworker/lumberjack/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/webworker/lumberjack/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "implicitDependencies": ["!internal-angular-test-util", "!internal-core-test-util"],
  "tags": ["type:package", "scope:public", "technology:javascript"]
}
