{
  "name": "webworkers-core",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/webworkers/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/webworkers/core",
        "main": "packages/webworkers/core/src/index.ts",
        "tsConfig": "packages/webworkers/core/tsconfig.lib.json",
        "assets": ["packages/webworkers/core/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs webworkers-core {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/webworkers/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/webworkers/core/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "implicitDependencies": ["!internal-test-util"],
  "tags": ["type:core"]
}
